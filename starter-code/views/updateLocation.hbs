<div class="form-container">

  <form action="/updatePlace/{{place._id}}" method="POST">

    <label for="name">Place name:</label>
    <input type="text" name="name" value="{{place.name}}">

    <label for="type">Type:</label>
    <select name="type">
      <option value="coffee-shop">Coffee shop</option>
      <option value="bookstore">Book store</option>
    </select>

    <label>Address</label>
    <input type="text" name="latitude" value="{{place.location.coordinates.[0]}}">
    <input type="text" name="longitude" value="{{place.location.coordinates.[1]}}">

    <input type="submit" value="Update" class="submit">

    {{#if message}}
    <div class="error-message">{{message}}</div>
    {{/if}}

  </form>

</div>